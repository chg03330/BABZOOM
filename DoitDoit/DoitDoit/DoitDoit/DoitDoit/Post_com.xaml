<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoitDoit.Post_com"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Orientation="Vertical">
            <!-- Place new controls here -->
            <Label Text="밥줌님의 2020년 5월 2일 식단" TextColor="Black" HorizontalTextAlignment="Center" Margin="0,10,0,0"
               FontSize="23" FontAttributes="Bold" />
            <StackLayout BackgroundColor="#dbelfo" Margin="15,30,15,0">
                <Label Text="댓글 내용" TextColor="Black" Margin="10,10,0,40" />
                <Entry x:Name="CommentWrite" />
            </StackLayout>
            <Button Text="작성" TextColor="Black" BackgroundColor="White" HorizontalOptions="EndAndExpand" Margin="0,0,15,0"
                CornerRadius="10" WidthRequest="80" BorderColor="#dbelfo" BorderWidth="3"/>
            <StackLayout BackgroundColor="#e4eodd" Margin="15,20,15,0">
                <Label Text="A님의 댓글1" TextColor="Black" Margin="10,10,0,40" />
            </StackLayout>
            <StackLayout BackgroundColor="#e4eodd" Margin="15,15,15,0">
                <Label Text="B님의 댓글2" TextColor="Black" Margin="10,10,0,40" />
            </StackLayout>
            <StackLayout BackgroundColor="#e4eodd" Margin="15,15,15,0">
                <Label Text="C님의 댓글3" TextColor="Black" Margin="10,10,0,40" />
            </StackLayout>
            <StackLayout BackgroundColor="#e4eodd" Margin="15,15,15,0">
                <Label Text="D님의 댓글4" TextColor="Black" Margin="10,10,0,40" />
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>