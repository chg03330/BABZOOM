<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoitDoit.Main"
             BackgroundColor="White"
             Appearing="ContentPage_Appearing">

    <ScrollView>
        <StackLayout Orientation="Vertical">
            <Label Text="내 식단 통계" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="15,15,0,0" />
            <Label Text="25000kcal" TextColor="Black" FontSize="17" HorizontalOptions="Center"/>
            <Button Text="aaa" Clicked="SideMenu_Clicked"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="추천 식단" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="15,15,0,0" />
                <Button Text="추천 식단 목록" Clicked="ToRecoListButton_Clicked" TextColor="Black" BackgroundColor="#A0BAED" HorizontalOptions="EndAndExpand" 
                        Margin="0,15,15,0" HeightRequest="40" WidthRequest="120" CornerRadius="10" />
            </StackLayout>
            <StackLayout BackgroundColor="#dbelfo" Margin="15,10,15,0">
                <Label Text="식단A" TextColor="Black" FontSize="15" Margin="10,10,0,50" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="자세히 보기" Clicked="RecoMenu_Clicked" BackgroundColor="#A0BAED" CornerRadius="20" WidthRequest="100" HeightRequest="40" 
                            HorizontalOptions="EndAndExpand" Margin="0,0,10,15" />
                </StackLayout>
            </StackLayout>
            <StackLayout BackgroundColor="#dbelfo" Margin="15,10,15,0">
                <Label Text="식단B" TextColor="Black" FontSize="15" Margin="10,10,0,50" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="자세히 보기" BackgroundColor="#A0BAED" CornerRadius="20" WidthRequest="100" HeightRequest="40" 
                            HorizontalOptions="EndAndExpand" Margin="0,0,10,15" />
                </StackLayout>
            </StackLayout>
            <StackLayout BackgroundColor="#dbelfo" Margin="15,10,15,0">
                <Label Text="식단C" TextColor="Black" FontSize="15" Margin="10,10,0,50" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="자세히 보기" BackgroundColor="#A0BAED" CornerRadius="20" WidthRequest="100" HeightRequest="40" 
                            HorizontalOptions="EndAndExpand" Margin="0,0,10,15" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>