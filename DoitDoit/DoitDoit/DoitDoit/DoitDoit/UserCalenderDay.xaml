                <Label Text="요리1" TextColor="Black" Margin="10,10,0,0" />
                <Label Text="요리2" TextColor="Black" Margin="10,10,0,0" />
                <Label Text="요리3" TextColor="Black" Margin="10,10,0,20" />
            </StackLayout>
            <Label Text="오후 7시" TextColor="Black" FontSize="18" Margin="0,10,20,0" HorizontalOptions="EndAndExpand" />
            <StackLayout BackgroundColor="#dbelfo" Margin="20,0,20,0">
                <Label Text="요리1" TextColor="Black" Margin="10,10,0,0" />
                <Label Text="요리2" TextColor="Black" Margin="10,10,0,0" />
                <Label Text="요리3" TextColor="Black" Margin="10,10,0,20" />
            </StackLayout>
            <Label Text="" BackgroundColor="Black" HeightRequest="1" Margin="10,10,10,0" />
