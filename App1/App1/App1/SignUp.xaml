<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.SignUp"
             BackgroundColor="#ccccff">

    <StackLayout VerticalOptions="CenterAndExpand">

        <Image Source="./a.png" HeightRequest="200"  Margin="0,0,0,70"></Image>

        <StackLayout Orientation="Horizontal" >
            <Label Text="    아이디 " TextColor="Black" FontSize="25" />
            <Entry WidthRequest="150" x:Name="Entry_ID"></Entry>
        </StackLayout>


        <StackLayout Orientation="Horizontal" >
            <Label Text=" 비밀번호" TextColor="Black" FontSize="25" />
            <Entry WidthRequest="150"  x:Name="PASSWORD"></Entry>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal" >
            <Label Text=" 비밀번호 확인" TextColor="Black" FontSize="25" />
            <Entry WidthRequest="150"  x:Name="PASSWORDCHECK"></Entry>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,30,0,0">
            <Button Text="로그인" Clicked="Button_Clicked" ></Button>
            <Button Text="회원가입" Clicked="Button_Clicked"></Button>
            <Button Text="취소" Clicked="Button_Clicked"></Button>
        </StackLayout>

    </StackLayout>
</ContentPage>